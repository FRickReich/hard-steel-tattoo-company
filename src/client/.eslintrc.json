{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false,
        "babelOptions": {
            "presets": ["@babel/preset-react"]
        },
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "ignorePatterns": ["node_modules/"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/display-name": [0],
        "no-undef": [0],
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    }
}
