{
    "parser": "babel-eslint",
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "allowImportExportEverywhere": true,
        "ecmaVersion": 11
    },
    "env": {
        "node": true,
        "commonjs": true
    },
    "rules": {
        "semi": ["error", "always"],
        "no-unused-vars": ["warn", "always"],
        "quotes": ["error", "single"]
    }
}
